    <section class="ftco-section-3 img">
        <div class="overlay"></div>
        <div class="container">
            <div class="row d-md-flex">
                <div class="col-md-12 volunteer pl-md-5 ftco-animate">
                    <h3 class="mb-3">{{ 'contact.headline'|trans }}</h3>
                    {% if emailSent == 1 %}
                        <h5>{{ 'contact.success'|trans }}</h5>
                    {% else %}

                        <form action="{{ path('web_contactHR') }}" class="volunter-form" method="post" id="contact">
                            <div class="form-group">
                                <input class="form-control" placeholder="{{ 'contact.name'|trans }}" type="text"
                                       name="name"
                                       required="required">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="{{ 'contact.email'|trans }}" type="text"
                                       name="email"
                                       required="required">
                            </div>
                            <div class="form-group">
                        <textarea class="form-control" cols="30" name="message"
                                  placeholder="{{ 'contact.message'|trans }}"
                                  rows="3" required="required"></textarea>
                            </div>
                            <div class="form-group">
                                <input class="btn btn-white py-3 px-5" type="submit" value="{{ 'contact.send'|trans }}"
                                       name="submitted">
                            </div>
                        </form>
                    {% endif %}
                </div>
