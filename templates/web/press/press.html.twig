{% extends 'base.html.twig' %}

{% block body %}
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-9 heading-section text-center">
                    <h2 class="mb-4 mb-5">{{ 'press.heading'|trans }}</h2>
                    <p>{{ 'press.text.first'|trans }} <a
                                href="javascript:window.location.href = 'mailto:' + ['presse','remedymatch.io'].join('@')"> presse@remedymatch.io</a>
                    </p>
                    <p>
                        {{ 'press.text.second'|trans }}

                    </p>
                    <div class="col-md-6 text-center offset-md-3">
                        <a class="btn btn-block btn-info px-3 py-2 mt-2" href="/RemedyMatch_Pressekit.zip" role="button">{{ 'press.button.download'|trans }}</a>
                    </div>

                    <p></p>
                </div>
            </div>
            <div class="row d-flex justify-content-center">
                {% for mention in mentions %}
                    <div class="col-sm-3">
                        <div class="cause-entry">
                            <a class="img"
                               href="{% if app.request.locale == 'de' %}{{ mention.urlGerman }}{% else %}{{ mention.url }}{% endif %}"
                               target="_blank"
                               style="background: url('{{ asset('/uploads/mention/' ~ mention['image.name']) }}'); background-size:  80%; background-repeat: no-repeat; background-position: center; padding: 1em;">
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}