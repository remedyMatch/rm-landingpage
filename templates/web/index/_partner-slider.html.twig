{# @var partners \App\Entity\Partner[] #}

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-9 heading-section ftco-animate text-center">
                <h2 class="mb-4">{{ 'partner-slider.headline'|trans }}</h2>
                <p>{{ 'partner-slider.text'|trans }} <br/><br/><a href="#contact-anchor">{{ 'partner-slider.here-more-first'|trans }}</a> {{ 'partner-slider.here-more-second'|trans }}</p>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 ftco-animate">
                <div class="carousel-cause owl-carousel">
                    {% for partner in partners %}
                        <div class="item">
                            <div class="cause-entry">
                                <a class="img" href="{% if app.request.locale == 'de' %}{{ partner.urlGerman }}{% else %}{{ partner.url }}{% endif %}" target="_blank"
                                   style="background: url('{{ asset('/uploads/partner/' ~ partner['image.name']) }}'); background-size:  80%; background-repeat: no-repeat; background-position: center; padding: 1em;">
                                </a>
                                <div class="text p-3 p-md-4">
                                    <p>
                                        {% if app.request.locale == 'de' %}
                                            {{ partner.descriptionGerman }}
                                        {% else %}
                                            {{ partner.description }}
                                        {% endif %}
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>