<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" href="{{ asset('/images/logo/rememdy-match-icon.png') }}"/>

    <title>Sticky Footer Navbar Template for Bootstrap</title>

    {{ encore_entry_link_tags('admin_css') }}
</head>

<body>

<header>
    <!-- Fixed navbar -->
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="#">
            <img src="{{ asset('/images/logo.png') }}" width="150" alt="">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse"
                aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                {% if is_granted('ROLE_DECIDER') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_registration_unreviewed_list') }}">Decider</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_user_list') }}">User</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_MARKETING') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_partners_list') }}">Partner</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_mentions_list') }}">Mentions</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_faq_list_sections') }}">FAQs</a>
                    </li>
                {% endif %}
            </ul>
            <form class="form-inline mt-2 mt-md-0">
                <a href="{{ path('admin_security_logout') }}" class="btn btn-secondary">Logout</a>
            </form>
        </div>
    </nav>
</header>

<!-- Begin page content -->
<main role="main" class="container vh-100">
    {% block container %}{% endblock %}
</main>

<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
{{ encore_entry_script_tags('admin_js') }}
</body>
</html>
